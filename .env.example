# ---------------------------------
# POSTGRES DATABASE CONFIGURATION
# Used by the 'db' service and the backend to connect
# ---------------------------------
POSTGRES_DB=travel_app
POSTGRES_USER=user
POSTGRES_PASSWORD=supersecretpassword

# ---------------------------------
# BACKEND (FASTAPI) CONFIGURATION
# ---------------------------------
# Full database connection string used by SQLAlchemy
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Connection URL for the Redis cache and rate limiter
REDIS_URL=redis://redis:6379

# OpenAI key
OPENAI_API_KEY=""

# [cite_start]JWT RS256 asymmetric keys. [cite: 89]
# These should be the full multi-line key strings, enclosed in quotes.
# Example command to generate: openssl genpkey -algorithm RSA -out private_key.pem -pkeyopt rsa_keygen_bits:2048
# and openssl rsa -pubout -in private_key.pem -out public_key.pem
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"

# [cite_start]JWT algorithm and token expiration in minutes. [cite: 89]
JWT_ALGORITHM=RS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

AMADEUS_API_KEY=""
AMADEUS_SECRET_KEY=""

# ---------------------------------
# FRONTEND (STREAMLIT) CONFIGURATION
# ---------------------------------
# The URL the frontend uses to communicate with the backend API
# Note: For communication between containers, 'backend' is the hostname.
BACKEND_API_URL=http://backend:8000

# [cite_start]The origin URL of the frontend for CORS configuration in the backend. [cite: 102]
# This is the URL you access in your browser.
CORS_ORIGIN=http://localhost:8501
